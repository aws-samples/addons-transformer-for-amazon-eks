{
  "compilerOptions": {
    "declaration": true,
    "module": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "nodenext",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*",
    "./src/schemas/*.schema.json"
  ],
  "ts-node": {
    "esm": true
  }
}
